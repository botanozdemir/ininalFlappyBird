<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
        </LinearLayout>

        <TextView
            android:id="@+id/Score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_medium"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text_size_medium"
            android:text="Score:" />
        <TextView
            android:id="@+id/secretSurnameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_medium"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text_size_medium"
            android:text="Barkod Numarası" />

        <EditText
            android:id="@+id/secretSurnameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/secretSurnameInfoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_medium"
            android:drawablePadding="@dimen/activity_margin_small"
            android:padding="@dimen/activity_margin_small"
            android:text="Barkod numarası"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text_size_smallest"
            android:visibility="gone" />

        <TextView
            android:id="@+id/secretSurnameErrorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_medium"
            android:drawablePadding="@dimen/activity_margin_small"
            android:padding="@dimen/activity_margin_small"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text_size_smallest"
            android:visibility="gone" />

            <TextView
                android:id="@+id/infor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_medium"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/text_size_medium"
                android:text="10 Puan toplayınca 1 TL kazanıyorsunuz. Süper değil mi? Süper! " />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_medium"
                android:textSize="@dimen/text_size_medium"
                android:background="@drawable/rounded_blue_button_background_normal"
                android:textColor="@color/white"
                android:text="Hesabıma Yükle" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>